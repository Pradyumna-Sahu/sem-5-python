'''
Write a function in Python to count uppercase character in a text file.
''' 

def count_upper(filename):
    with open(filename, "r") as f:
        text = f.read()
    count = sum(1 for ch in text if ch.isupper())
    print("Uppercase letters:", count)

count_upper("story.txt")

# OUTPUT 
'''
File: story.txt

Hello WORLD, Python Is Fun.


Output

Uppercase letters: 7
'''


def count_upper(filename):
    with open(filename, "r") as f:
        text = f.read()
    count = 0
    for ch in text:
        if ch >= "A" and ch <= "Z":   # check uppercase
            count += 1
    print("Uppercase letters:", count)

count_upper("story.txt")
